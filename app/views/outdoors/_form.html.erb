
<%= semantic_form_for @outdoor do |f| %>
  <%= f.inputs do%>
  <%= f.input :nome %> 
  <%= f.input :morada %> 
  <%= f.input :foto, :label=> "Fotografia (Link Externo)"%>
  <%= f.input :detalhes, :input_html => { :class => 'autogrow', :rows => 2, :cols => 20 } %>
  <%= f.input :latitude, :label => "Lat" %> <%= f.input :longitude, :label => "Lng" %> 
  <%= f.input :gmaps, :input_html => { :disabled => true }, :label => "" %> 
<% end %>

<%= f.actions do %>
   <%= f.action :submit, :as => :button, :label => "Criar Outdoor"  %>
<% end %>

<%= render 'jsmap' %>

<% end %>
